{
  "name": "greeting",
  "version": "1.0.0",
  "description": "Greeting React + NodeJS",
  "main": "src/server/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "start": "npm run build && node src/server/index.js",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "run-s lint:check:**",
    "lint:check:js": "eslint --ext .js --ext .jsx . src",
    "lint:check:css": "stylelint \"src/**/*.css\"",
    "lint:fix": "run-p lint:fix:**",
    "lint:fix:js": "eslint --fix --ext .js --ext .jsx . src",
    "lint:fix:css": "stylelint --fix \"src/**/*.css\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{css}": [
      "stylelint --fix",
      "git add"
    ],
    "src/**/*.{js,jsx}": [
      "eslint --fix --ext .js --ext .jsx",
      "prettier --write",
      "git add"
    ]
  },
  "author": "Aleksa Matiyev",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.0",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^4.0.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.0.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.17.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "style-loader": "^0.23.0",
    "stylelint": "^9.7.0",
    "stylelint-config-standard": "^18.2.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.3"
  }
}
